<div class="container">
  <div class="card">
    <div class="card-content">
      <span class="card-title blue-text text-darken-4">Sign up</span>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <%= f.label :email %>
        </div>

        <div class="field input-field">
          <%= f.password_field :password, autocomplete: "new-password" %>
          <%= f.label :password %>
        </div>

        <div class="field input-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= f.label :password_confirmation %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Sign Up", class: "btn blue darken-4" %>
        </div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to "Login", new_user_session_path, class: "blue-text text-darken-4" %>
      <%= link_to "Signup", new_user_registration_path, class: "blue-text text-darken-4" %>
    </div>
  </div>

</div>
