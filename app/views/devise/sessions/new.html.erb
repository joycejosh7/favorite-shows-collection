<div class="container">
  <div class="card">
    <div class="card-content">
      <span class="card-title blue-text text-darken-4">Log in</span>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <%= f.label :email %>
        </div>

        <div class="field input-field">
          <%= f.password_field :password, autocomplete: "current-password" %>
          <%= f.label :password %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Log in", class: "btn blue darken-4" %>
        </div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to "Login", new_user_session_path, class: "blue-text text-darken-4" %>
      <%= link_to "Signup", new_user_registration_path, class: "blue-text text-darken-4" %>
    </div>
  </div>

</div>